<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EditTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">3</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="WhiteViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/textCalories</item>
        <item name="layout_constraintBottom_toBottomOf">@id/view1</item>
    </style>

    <style name="SpaceStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/textCpfc</item>
    </style>

    <style name="ColorfulViewStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="layout_constraintTop_toBottomOf">@id/textCpfc</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:hint">Кол-во</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">4</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintTop_toBottomOf">@id/textCalories</item>
    </style>
</resources>